{% extends "base.html.j2" %}
{% block content %}
<h3 class="uk-h3">Create shorten link</h3>
<form method="POST" action="/">
    <div class="uk-margin uk-flex uk-flex-column">
        <label for="shortened_url">Source url</label>
        <input class="uk-input" placeholder="example" name="shortened_url">
    </div>
    <div class="uk-margin uk-flex uk-flex-column">
        <label for="real_url">Redirect to :</label>
        <input class="uk-input" placeholder="https://example.org" type="url" name="real_url">
    </div>
    <button class="uk-button uk-form-width-small">Create</button>
</form>
{% with messages = get_flashed_messages(category_filter=["success"]) %}
{% if messages %}
<div class="uk-alert-success uk-margin">
    <p class="uk-padding-small">{{ messages[0] }}</p>
</div>
{% endif %}
{% endwith %}
{% with messages = get_flashed_messages(category_filter=["error"]) %}
{% if messages %}
<div class="uk-alert-danger uk-margin">
    <p class="uk-padding-small">{{ messages[0] }}</p>
</div>
{% endif %}
{% endwith %}
{% endblock %}
